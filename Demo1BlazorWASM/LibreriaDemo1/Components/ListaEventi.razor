<h3>@Titolo</h3>


<button class="btn btn-primary mb-4" @onclick="OnCrea">Crea Evento</button>

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Località</th>
        <th>Data</th>
        <th></th>
    </tr>
    @foreach (var evento in Eventi)
    {
        <tr>
            <td>@evento.Id</td>
            <td>@evento.Nome</td>
            <td>@evento.Localita</td>
            <td>@evento.Data.ToShortDateString()</td>
            <td>
                <button @onclick="() => OnModifica.InvokeAsync(evento)" class="btn btn-primary">Modifica</button>
                <button @onclick="() => OnElimina.InvokeAsync(evento)" class="btn btn-danger">Elimina</button>
            </td>
        </tr>
    }
</table>



@code {

    [Parameter]
    public string Titolo { get; set; } = "Lista eventi futuri";

    [Parameter]
    public List<ElementoListaEventi> Eventi { get; set; }
        = new List<ElementoListaEventi>();

    [Parameter]
    public EventCallback<ElementoListaEventi> OnElimina { get; set; }


    [Parameter]
    public EventCallback<ElementoListaEventi> OnModifica { get; set; }


    [Parameter]
    public EventCallback OnCrea { get; set; }

}
